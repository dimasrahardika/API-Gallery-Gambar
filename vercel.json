{
  "version": 2,
  "name": "api-galeri-gambar",
  "builds": [
    {
      "src": "src/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "*.html",
      "use": "@vercel/static"
    },
    {
      "src": "uploads/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "src/server.js"
    },
    {
      "src": "/images/(.*)",
      "dest": "/uploads/images/$1"
    },
    {
      "src": "/thumbnails/(.*)",
      "dest": "/uploads/thumbnails/$1"
    },
    {
      "src": "/(login|register|upload-form|view-images)",
      "dest": "/$1.html"
    },
    {
      "src": "/",
      "dest": "/view-images.html"
    },
    {
      "src": "/(.*)",
      "dest": "src/server.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}